<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvIamExcitedForYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:fontFamily="sans-serif-condensed-light"
        android:letterSpacing="0.1"
        android:text="I am excited\nfor you"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="33sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/userPictureLottieAnimation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/userPictureLottieAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_speed="1"
        app:lottie_rawRes="@raw/profile_pic_animation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonUploadPic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/black_filled_ract_"
        android:fontFamily="sans-serif-condensed"
        android:text="Upload Pic"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userPictureLottieAnimation" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/black_filled_ract_"
        android:fontFamily="sans-serif-condensed"
        android:text="Next"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonUploadPic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/artbuttonUploadPic"
        android:layout_width="42.21dp"
        android:layout_height="32.43dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/arrows_vector_double"
        android:rotation="180"
        app:layout_constraintEnd_toStartOf="@id/buttonUploadPic"
        app:layout_constraintTop_toTopOf="@id/buttonUploadPic"
        app:layout_constraintBottom_toBottomOf="@id/buttonUploadPic"/>

</androidx.constraintlayout.widget.ConstraintLayout>