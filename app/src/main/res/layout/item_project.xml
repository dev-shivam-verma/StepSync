<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/grey_rect_bg">

    <View
        android:id="@+id/dotPriorityProject"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/dot_very_high_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonDeleteProject"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_delete"
        app:layout_constraintBottom_toBottomOf="@id/tvStartDate"
        app:layout_constraintStart_toStartOf="@id/dotPriorityProject"
        app:layout_constraintEnd_toEndOf="@id/dotPriorityProject"
        />

    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="13dp"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-condensed"
        android:singleLine="true"
        android:text="Project Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/dotPriorityProject"
        app:layout_constraintEnd_toStartOf="@+id/tvProgressPrecentage"
        app:layout_constraintStart_toEndOf="@id/dotPriorityProject"
        app:layout_constraintTop_toTopOf="@id/dotPriorityProject" />

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:text="Started On: 11/01/2024"
        app:layout_constraintStart_toStartOf="@id/tvProjectName"
        app:layout_constraintTop_toBottomOf="@id/tvProjectName"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.smb.animatedtextview.AnimatedTextView
        android:id="@+id/tvProgressPrecentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:atv_animationDuration="800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>